@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">Vehicles</li>
    <li class="breadcrumb-item"><a asp-page="CreateVehicleMake">Create</a></li>
</ol>

<h3>Vehicles</h3>
<div class="row">
    <div class="col-md-5">
        <ul class="list-group">
	    @if (Model.Vehicles.Count==0)
	    {
		<p>No vehicles made....</p>
	    }
	    else
	    {
            	@foreach (var vehicle in Model.Vehicles)
            		{
				<hr />
				<h4><a asp-page="VehicleMake" asp-route-id="@vehicle.Id">Vehicle: @vehicle.Id</a></h4>
				<ul class="list-group">
                			<li class="list-group-item">ID: @vehicle.Id</li>
					<li class="list-group-item">Name: @vehicle.Name</li>
					<li class="list-group-item">Abbrevation: @vehicle.Abbrevation</li>
				</ul>
				<a class="btn btn-primary" asp-page="Delete" asp-route-id="@vehicle.Id">delete</a>
            		}
            }
        </ul>
    </div>
</div>
